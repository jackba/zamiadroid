<LinearLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:padding="5px"
>

<LinearLayout android:layout_width="fill_parent" android:background="@color/background2" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:padding="5px">
    <TextView android:textColor="#ffffffff" android:text="@string/thInfoTitle" android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_width="wrap_content"></TextView>
</LinearLayout>

<LinearLayout
android:id="@+id/linearThInfo"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="5px"
android:orientation="vertical"

>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout3" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/linearLayout4" android:layout_height="fill_parent" android:layout_weight="1">
            <TextView android:text="@+id/TextView02" android:layout_height="wrap_content" android:id="@+id/tvThName" android:layout_width="wrap_content"></TextView>
            <TextView android:text="TextView" android:layout_height="wrap_content" android:id="@+id/tvThType" android:layout_width="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout5" android:layout_height="fill_parent">
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/removeThButton" android:layout_gravity="right"></ImageButton>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvThUpdateTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

<LinearLayout
    android:id="@+id/linearLayout8"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvThOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvThOriginType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_marginLeft="10dp"/>

</LinearLayout>

</LinearLayout>

